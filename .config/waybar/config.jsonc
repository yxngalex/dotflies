{
    "layer": "top",
    "position": "top",
    "height": 45,
    "spacing": 0,
    "margin-top": 5,
    "margin-bottom": 5,
    "margin-left": 10,
    "margin-right": 10,
    "modules-left": [
        "custom/launcher",
	"hyprland/workspaces",
	"hyperland/window"
    ],
    "modules-center": [
	//"custom/music"
      "clock",
      "custom/weather",
    ],
    "modules-right": [
        "custom/notifications",
        "custom/clipboard",
        "custom/updates",
        "cpu",
        "memory",
        "disk",
	"network",
	"pulseaudio",
  "tray",
  "custom/power"
    ],
	"custom/music": {
        	"format": "ÔÄÅ  {}",
        	"escape": true,
        	"interval": 5,
        	"tooltip": false,
        	"exec": "playerctl metadata --format='{{ title }}'",
        	"on-click": "playerctl play-pause",
        	"max-length": 50
    },
    "custom/launcher": {
    "format": "ü™ê", 
    "tooltip": true,
    "tooltip-format": "Launcher (Rofi)",
    "on-click": "pkill wofi || sleep 0.15 && wofi --show drun",
    "on-click-right": "pkill wofi || sleep 0.15 && wofi --show run"
     },
    "hyprland/workspaces": {
        "format": "",
        "format-icons": {
            "active": "ÔÜí",
            "default": "ÔÑë"
        },
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "on-click": "activate"
    },
    "cpu": {
        "format": "Ôíº {usage}%",
        "tooltip": true,
        "on-click": "kitty --start-as=fullscreen --title all_is_kitty sh -c 'btop'",
        "interval": 2
    },
    "memory": {
        "format": "ÓøÖ {}%",
        "tooltip": true,
        "on-click": "kitty --start-as=fullscreen --title all_is_kitty sh -c 'btop'",
        "interval": 2
    },
    "temperature": {
        "critical-threshold": 40,
        "format-critical": "{icon} {temperatureC}¬∞C",
        "format": "{icon} {temperatureC}¬∞C",
        "format-icons": [
            "Ôãâ",
            "Ôãà",
            "Ôãá"
        ],
        "tooltip": true,
        "on-click": "kitty --start-as=fullscreen --title all_is_kitty sh -c 'btop'",
        "interval": 2
    },
    "disk": {
        "format": "ÔÇ† {percentage_used}% ({free})",
        "tooltip": true,
        "on-click": "kitty --start-as=fullscreen --title all_is_kitty sh -c 'btop'",
        "interval": 2
    },
    "hyprland/window": {
        "format": "{}",
        "separate-outputs": true,
        "max-length": 35
    },
    "network": {
        "format": "ÔÅΩ{bandwidthTotalBytes}",
        "format-disconnected": "{icon} No Internet",
        "format-linked": "Ôûñ {ifname} (No IP)",
        "format-alt": "‚Üï{bandwidthUpBytes} | ‚Üï{bandwidthDownBytes}",
        "tooltip-format": "{ifname}: {ipaddr}/{cidr} Ôûñ {gwaddr}",
        "tooltip-format-wifi": "{icon} {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "{icon} {ipaddr}/{cidr}",
        "tooltip-format-disconnected": "{icon} Disconnected",
        "on-click-right": "nm-connection-editor",
        "format-icons": {
            "ethernet": "Ôõø",
            "disconnected": "‚ö†",
            "wifi": [
                "Ô™©",
                "Ô™®"
            ]
        },
        "interval": 2
    },
    "pulseaudio": {
    "format": "ÔÄ® {volume}%",
    "format-bluetooth": "{icon} {volume}%",
    "format-bluetooth-muted": "Ôüè",
    "format-muted": "Ôë¶",
    "format-source": "{volume}% ÔÑ∞",
    "format-source-muted": "ÔÑ±",
    "format-icons": {
        "headphone": "Ôüä",
        "headset": "Ôüç",
        "phone": "ÔÇï",
        "portable": "ÔÇï",
        "car": "ÔÜπ",
        "default": [
            "ÔÄ¶",
            "ÔÄß",
            "ÔÄ®"
        ]
    },
    "on-click": "pavucontrol"
    },
    "custom/notifications": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "sleep 0.15 && swaync-client -t -sw",
        "on-click-right": "sleep 0.15 && swaync-client -d -sw",
        "escape": true
    },
    "tray": {
        "icon-size": 15,
        "spacing": 15
    },
    "clock": {
        "timezone": "Europe/Belgrade",
        "format": "ÔÄó {:%d <small>%a</small> %H:%M}",
        "format-alt": "ÔÄó {:%A %B %d %Y (%V) | %r}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "calendar-weeks-pos": "right",
        "today-format": "<span color='#f38ba8'><b><u>{}</u></b></span>",
        "format-calendar": "<span color='#f2cdcd'><b>{}</b></span>",
        "format-calendar-weeks": "<span color='#94e2d5'><b>W{:%U}</b></span>",
        "format-calendar-weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "interval": 60,
    },
    "custom/weather": {
        "tooltip": true,
        "format": "{}",
        "exec": "~/.scripts/tools/expand weather",
        "return-type": "json"
    },
    "custom/power": {
        "format": "{}",
        "exec": "echo '{\"text\":\"‚èª\",\"tooltip\":\"Power\"}'",
        "return-type": "json",
        "on-click": "~/.config/wlogout/launch.sh"
    }
}
